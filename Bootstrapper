import plotly.plotly as py
import plotly.graph_objs as go
import random

numbers = [1,5,2,2,20,20,5,3]
totalcycles = 20

numberdata = [
    go.Bar(
	##x=[this,that,this]
        y=numbers
    )
]
plot_url = py.plot(numberdata, filename='basic-bar')


avg = sum(numbers) / len(numbers)
print ("Original Dataset:")
print (numbers)
print ("\nMean of dataset is: %s \n" % (avg))

def boot_strapper():
    cycles = totalcycles
    means = []
    print ("Randomized Datasets:")
    while cycles > 0:
        setsize = len(numbers)
        dataset = []
        while setsize > 0:
            rand = random.choice(numbers)
            dataset.append(rand)
            setsize -= 1
        mean = (sum(dataset) / len(numbers))
        means.append(mean)
        cycles -= 1
        print (dataset)
    print ("\nGenerated Means:")
    print (means)
    result = sum(means) / len(means)
    print ("\nBootstrapped Mean:")
    print (result)

bootdata = [
    go.Bar(
	##x=[this,that,this]
        y=means
    )
]
plot_url = py.plot(bootdata, filename='basic-bar')


print (boot_strapper())

